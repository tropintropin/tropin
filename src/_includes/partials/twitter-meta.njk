<meta name="twitter:card" content="{{ meta.twitterCardType }}"/>
<meta name="twitter:title" content="{{ title | default(site.title) }}"/>
<meta
  name="twitter:description"
  content="{{ description | default(site.description) }}"
/>
<meta name="twitter:image" content="{{ image | default(meta.defaultImage) }}?v={{ build.timestamp }}"/>
<meta
  name="twitter:image:alt"
  content="{{ imageAlt | default(meta.defaultImageAlt) }}"
/>
