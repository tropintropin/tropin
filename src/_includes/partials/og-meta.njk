<meta property="og:title" content="{{ title | default(site.title) }}" />
<meta property="og:type" content="{{ ogType | default(meta.defaultOgType) }}" />
<meta
  property="og:description"
  content="{{ description | default(site.description) }}"
/>
<meta property="og:image" content="{{ image | default(meta.defaultImage) }}" />
<meta
  property="og:image:width"
  content="{{ imageWidth | default(meta.defaultOgImageWidth) }}"
/>
<meta
  property="og:image:height"
  content="{{ imageHeight | default(meta.defaultOgImageHeight) }}"
/>
<meta
  property="og:image:alt"
  content="{{ imageAlt | default(meta.defaultImageAlt) }}"
/>
<meta property="og:url" content="{{ page.url | url }}" />
<meta property="og:site_name" content="{{ site.title }}" />
<meta property="og:locale" content="{{ site.language }}" />
{% for locale in meta.alternateLocales %}
<meta property="og:locale:alternate" content="{{ locale }}" />
{% endfor %}
