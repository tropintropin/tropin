<header>
  <div class="print-info">
    <img src="{{ meta.printQrCode }}" alt="QR для печати">
    <div class="print-text">
      <p>Версия для печати</p>
      <p>Контакты:</p>
      <p>tropin.tropin@gmail.com</p>
      <p>+7 999 215-10-69</p>
    </div>
  </div>

  <div class="header-inner">
    <div class="title-row">
      <button class="nav-toggle" aria-label="Открыть меню"></button>
      <h1 class="site-title">
        <a href="{{ site.url }}">{{ site.title }}</a>
      </h1>
    </div>

    <div class="nav-wrapper">
      <nav class="main-nav" aria-label="Главное меню">
        {% if menu and menu.length %}
          <ul class="nav-list">
            {% for item in menu %}
              {% if item.url == page.url %}
                <li>{{ item.title }}</li>
              {% else %}
                <li>
                  <a href="{{ item.url | url }}">{{ item.title }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </nav>

      <div id="search"></div>
    </div>
  </div>
</header>
