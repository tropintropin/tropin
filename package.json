{
  "name": "tropin",
  "version": "1.0.0",
  "description": "Код моего сайта [tropin.one](https://tropin.one)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:css": "sass src/assets/scss/main.scss src/assets/css/main.css --no-source-map --style=compressed",
    "watch:css": "sass --watch src/assets/scss/main.scss:src/assets/css/main.css --style=compressed",
    "start": "eleventy --serve",
    "pagefind": "npx pagefind --site _site",
    "watch:pagefind": "chokidar '_site/**/*.html' -d 200 -c 'npm run pagefind'",
    "dev": "npm-run-all -p watch:css start watch:pagefind",
    "send-webmentions": "node scripts/send-webmentions.js",
    "build": "npm run build:css && eleventy && npm run pagefind && npm run send-webmentions",
    "clean": "rimraf _site"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "cssnano": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "pagefind": "^1.3.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0"
  },
  "dependencies": {
    "@codegouvfr/eleventy-plugin-calendar": "^3.0.6",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "dotenv": "^17.2.1",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "luxon": "^3.7.1",
    "node-fetch": "^3.3.2",
    "xml2js": "^0.6.2"
  }
}
